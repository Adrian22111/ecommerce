{% extends 'admin/base.html.twig' %}
{% trans_default_domain 'admin.product_category' %}


{% block bread %}
    â­¢ {{'product_categories'|trans}}
{% endblock %}
{% block title %}{{'product_category_list'|trans}}{% endblock %}

{% block body %}
<div class="overflow-x-auto max-w-[1440px] flex flex-col">
    <div class="mb-4 self-end">
        <a href="{{ path('admin_product_category_new') }}" class="inline-block px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 capitalize">
            {{ 'add_product_category'|trans }}
        </a>
    </div>
    <table class="min-w-full divide-y divide-gray-200 bg-white dark:bg-gray-800">
        <thead class="bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-white">
            <tr>
                <th class="px-4 py-2 text-left">{{ 'labels.name'|trans }}</th>
                <th class="px-4 py-2 text-left">{{ 'labels.options'|trans }}</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-300 dark:divide-gray-600 text-gray-800 dark:text-gray-100">
            {% for product_category in product_categories %}
                <tr>
                    <td class="px-4 py-2">{{ product_category.name }}</td>
                    <td class="px-4 py-2">
                        <a 
                            href="{{ path('admin_product_category_edit', {'id': product_category.id}) }}" 
                            class="ml-2 text-blue-600 hover:underline"
                        >
                            {{ 'edit'|trans }}
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="px-4 py-2 text-center text-gray-500">{{ 'no_records_found'|trans }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}




