<form method="post" action="{{ path('admin_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn block w-full shadow-sm border-transparent rounded-md border p-2 mt-4 mb-2
                hover:cursor-pointer bg-red-600 hover:bg-red-700  dark:bg-red-500 dark:hover:bg-red-600
                text-white text-center capitalize"
    >
        {{ 'delete'|trans(domain='admin.products')}}
    </button>
</form>
  
      