<form id="delete-form-{{ product.id }}" method="post" action="{{ path('admin_product_delete', {'id': product.id}) }}" >
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button type="button" 
        class = "block w-full shadow-sm border-transparent 
                bg-red-600 hover:bg-red-700 
                dark:bg-red-500 dark:hover:bg-red-400 
                text-white rounded-md border p-2 mt-4 mb-2 
                hover:cursor-pointer capitalize"
        onclick="
            modal.open({
                title: '{{ 'delete_product'|trans(domain='admin.products')}}',
                content: '{{ 'confirm_product_deletion'|trans({'%product_name%': product.name}, 'admin.products')}}',
                buttons: [
                    { 
                        text: '{{ 'delete'|trans(domain='admin.products')}}',
                        class: 'bg-red-600 hover:bg-red-700 dark:bg-red-500 dark:hover:bg-red-400 text-white',
                        onClick: () => { modal.close(); document.getElementById('delete-form-{{ product.id }}').submit();  } 
                    }
                ]
            })
    ">
        {{ 'delete'|trans(domain='admin.products') }}
    </button>
</form>
      